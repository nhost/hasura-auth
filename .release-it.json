{
  "npm": {
    "publish": false,
    "ignoreVersion": false,
    "skipChecks": false
  },
  "git": {
    "commitMessage": "chore: release v${version}"
  },
  "github": {
    "release": true,
    "autoGenerate": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
